@model  ProyectoWeb.Models.tb_sala
@{
    ViewBag.Title = "EditarSala";

    List<SelectListItem> tiposProyecciones = new List<SelectListItem>();
    tiposProyecciones.Add(new SelectListItem
    {
        Text = "3D",
        Value = "3D"
    });
    tiposProyecciones.Add(new SelectListItem
    {
        Text = "2D",
        Value = "2D",
        Selected = true
    });
}
<h2>Editar Sala</h2>
<div class="container">
    <h2>Agregar Sala</h2>
    @using (Html.BeginForm("EditarSala", "Salas", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data", @role = "form" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2">Codigo</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(Model => Model.cod_sala, new { @readonly = "readonly", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Nombre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(Model => Model.nom_sala, new { @class = "form-control", @placeholder = "Nombre de la Sala" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Tipo de Sala</label>
            <div class="col-sm-10">
                @Html.DropDownList("cod_tipo_sala", (SelectList)ViewBag.TipoSala, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Tipo de proyeccion</label>
            <div class="col-sm-10">
                @Html.DropDownList("tipo_proyeccion", tiposProyecciones, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Local</label>
            <div class="col-sm-6">
                @Html.DropDownList("id_local", (SelectList)ViewBag.locales, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 col-sm-offset-1">
                <input class="btn btn-default" type="submit" value="Editar" />
            </div>
            <div class="col-sm-2">
                @Html.ActionLink("Cancelar", "Index", "Index", new { @role = "button", @class = "btn btn-default" })
            </div>
        </div>

        <div>@Html.ValidationSummary()</div>
    }
</div>