@model ProyectoWeb.Models.tb_usuario
@{
    ViewBag.Title = "Login";
}
<div class="container">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Login", new { @class = "login-form" }))
    {
        <h2 class="form-signin-heading">Por favor ingresa tus datos</h2>
        @Html.ValidationSummary(true, "Login fallido,verificar los datos.");
        <div>
            <fieldset>
                <legend>Login Form</legend>
                <div>@Html.LabelFor(u => u.dni) </div>
                <div>
                    @Html.TextBoxFor(u => u.dni, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.dni)
                </div>

                <div>@Html.LabelFor(u => u.clave) </div>
                <div>
                    @Html.PasswordFor(u => u.clave, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.clave)
                </div>
                <input type="submit" value="Ingresar" />
            </fieldset>
        </div>
    }

</div>